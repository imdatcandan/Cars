<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="car"
            type="com.imdatcandan.cars.model.CarUiModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/dimen_16_dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/dimen_300_dp"
            android:layout_height="@dimen/dimen_300_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardCornerRadius="@dimen/dimen_4_dp"
            card_view:cardElevation="@dimen/dimen_4_dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_16_dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16_sp"
                    app:layout_constraintBottom_toTopOf="@id/car_model_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:text="@{car.name}"
                    card_view:text="carName" />

                <TextView
                    android:id="@+id/car_model_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16_sp"
                    app:layout_constraintBottom_toTopOf="@id/car_lisence_plate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/car_name"
                    app:text="@{car.modelName}"
                    card_view:text="carModelName" />

                <TextView
                    android:id="@+id/car_lisence_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16_sp"
                    app:layout_constraintBottom_toTopOf="@id/car_fuel_level"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/car_model_name"
                    app:text="@{car.licensePlate}"
                    card_view:text="carLicensePlate" />

                <TextView
                    android:id="@+id/car_fuel_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16_sp"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/car_lisence_plate"
                    app:text="@{String.valueOf(car.fuelLevel)}"
                    card_view:text="80" />

                <ImageView
                    android:id="@+id/car_icon"
                    android:layout_width="@dimen/dimen_240_dp"
                    android:layout_height="@dimen/dimen_160_dp"
                    app:imageUrl="@{car.carImageUrl}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/car_fuel_level" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
